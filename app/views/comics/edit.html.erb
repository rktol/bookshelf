<% provide(:title, "漫画の編集") %>
<h1>漫画の編集</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@comic) do |f| %>

      <%= f.label :title, "タイトル" %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :author, "作者"  %>
      <%= f.text_field :author, class: 'form-control' %>

      <%= f.submit "変更", class: "btn btn-primary" %>
    <% end %>

    </div>
  </div>
</div>
