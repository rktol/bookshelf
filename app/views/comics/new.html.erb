<%= provide(:title, "漫画の追加") %>

<h1> 漫画の追加</h1>
<h2>
<%= form_with model: Comic.new, url: {action: :create}, local: true do |f| %>
<div　class="row">
  <div class="col-md-6 col-md-offset-3">
 <%= f.label :title, "作品名" %>
 <%= f.text_field :title, id: 'comic_title', class: 'form-control' %>

 <%= f.label :author, "作者" %>
 <%= f.text_field :author, id: 'comic_author', class: 'form-control' %>

 <%= f.submit "変更",class: "btn btn-primary"%>
</div>
</div>


<% end %>

</h2>
