<% provide(:title, "ログイン") %>
<h1>ログイン</h1>
<%= form_with scope: :session, url: {action: :create}, local: true do |f| %>
   <div class="row">
     <div class="col-md-6 col-md-offset-3">
       <%= f.label :email ,"Email"%>
       <%= f.text_field :email, id: 'session_email', class: 'form-control' %>

       <%= f.label :password, "パスワード" %>
       <%= f.password_field :password, id: 'session_password', class: 'form-control' %>

   <%= f.submit "ログイン",class: "btn btn-primary" %>
   <p>新規登録は <%= link_to "こちら","users/new" %></p>
 </div>
</div>
<% end %>
